@model Worktastic.Models.JobPosting
@{
    ViewData["Title"] = "Erstellen oder bearbeiten";

}

<form asp-controller="JobPosting" asp-action="CreateEditJob" enctype="multipart/form-data">
    <div class="card">

        <div class="card-header">
            <h5>Inserat bearbeiten</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="Id" />

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="JobTitle" type="text" placeholder="Bitte trage eine Jobbeschreibung ein" />
                </div>

                <div class="col">
                    <input class="form-control" asp-for="JobLocation" type="text" placeholder="Bitte trage einen Ort ein" />
                </div>
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <textarea rows="6" class="form-control" asp-for="Description" placeholder="Bitte trage eine Beschreibung ein"></textarea>
            </div>
        </div>

        <div class="card-body form-group">

            <div class="row">
                <div class="col-6">
                    <input class="form-control" asp-for="Salary" type="number" placeholder="Bitte gebe Gehalt" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-6">
                    <div class="col-form-label">
                        Wann startet der Job?
                    </div>
                    <input class="form-control" asp-for="StartDate" type="date" />
                </div>
            </div>

            <hr />
            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="CompanyName" type="text" placeholder="Firmenname" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactWebsite" type="url" placeholder="Website (URL)" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="Telefonnummer" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactMail" type="email" placeholder="Email-Adresse" />
                </div>
            </div>

            <div class="col">
                <input class="form-control" asp-for="JobLocation" type="text" placeholder="Bitte trage einen Ort ein" />
            </div>

            <div class="row form-group">
                <div class="col">
                    <label> Bild</label>
                    <input class="form-control-file" name="file" type="file" />
                </div>
            </div>

            <div class="card-footer">
                <button class="btn btn-primary" type="submit">Speichern</button>
            </div>
        </div>
    </div>
</form>